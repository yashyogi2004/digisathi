<!DOCTYPE html>
<html lang="en" class="scroll-smooth">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <title>Mindfulness Activities | Wellness Dashboard</title>
  <script src="https://cdn.tailwindcss.com"></script>
  <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;600&display=swap" rel="stylesheet"/>
  <link rel="stylesheet" href="mindfulness.css"/>
</head>
<body class="bg-white dark:bg-gray-900 text-gray-800 dark:text-gray-200 font-inter transition duration-300">

  <div class="min-h-screen p-6">
    <!-- Header -->
    <header class="header">
      <div>
        <h1 class="title">🧘 Mindfulness Activities</h1>
        <p class="subtitle">Relax, breathe, and find your calm.</p>
      </div>
      <button id="toggleDark" class="toggle-mode">Toggle Mode</button>
    </header>

    <!-- Breathing Exercise -->
    <section class="section">
      <h2 class="section-title">✨ Breathing Exercise</h2>
      <div id="breathingCircle" class="breathing-circle"></div>

      <div class="speed-control">
        <label for="speedControl" class="label">Speed:</label>
        <select id="speedControl" class="select">
          <option value="slow">Slow</option>
          <option value="medium" selected>Medium</option>
          <option value="fast">Fast</option>
        </select>
      </div>

      <p class="breathing-instruction">Breathe In... Hold... Breathe Out</p>
    </section>

    <!-- Guided Meditations -->
    <section class="section">
      <h2 class="section-title">🎧 Guided Meditations</h2>
      <div class="meditation-grid">
        <div class="meditation-card" data-title="Morning Clarity" data-description="5-minute session for a focused start.">
          <h3>Morning Clarity</h3>
          <p>5-minute session for a focused start.</p>
          <button class="meditation-play morning">Play</button>
        </div>
        <div class="meditation-card" data-title="Evening Unwind" data-description="Relax after a long day.">
          <h3>Evening Unwind</h3>
          <p>Relax after a long day.</p>
          <button class="meditation-play evening">Play</button>
        </div>
        <div class="meditation-card" data-title="Deep Calm" data-description="10-minute body scan meditation.">
          <h3>Deep Calm</h3>
          <p>10-minute body scan meditation.</p>
          <button class="meditation-play calm">Play</button>
        </div>
      </div>
    </section>

    <!-- Inspirational Quotes -->
    <section class="section">
      <h2 class="section-title">💬 Inspirational Quote</h2>
      <blockquote id="quote" class="quote-block">
        “Peace comes from within. Do not seek it without.” – Buddha
      </blockquote>
    </section>

    <!-- Session Controls -->
    <section class="section text-center">
      <div class="button-group">
        <button id="startSession" class="start-session-btn">Start Session</button>
        <button id="stopSession" class="stop-session-btn hidden">Stop Session</button>
      </div>
      <div id="sessionTimer" class="session-timer hidden">Session: 00:00</div>

      <div class="music-toggle">
        <label for="musicToggle" class="label">🎵 Background Music:</label>
        <input type="checkbox" id="musicToggle" class="toggle-checkbox">
      </div>

      <div class="streak-section">
        <h3 class="streak-title">🔥 Weekly Streak</h3>
        <div id="streakDisplay" class="streak-display"></div>
      </div>
    </section>
  </div>

  <!-- Modal -->
  <div id="modal" class="modal hidden">
    <div class="modal-content">
      <h3 id="modalTitle" class="modal-title"></h3>
      <p id="modalDescription"></p>
      <button class="close-modal">Close</button>
    </div>
  </div>

  <!-- Audio -->
  <audio id="bgMusic" loop>
    <source src="assets/music/calm-background.mp3" type="audio/mpeg">
  </audio>

  <script src="mindfulness.js"></script>
</body>
</html>
